pipeline{
   agent any
   stages{
         stage("Git Checkout"){
                steps{
                    git credentialsId: 'javahome', url: 'https://github.com/yecharlac/myweb.git'
                     }
         }
              stage("Maven Build"){
                steps{
                     sh "mvn clean package"
                     sh "mv target/*.war target/myweb.war
                     }
              }
                   stage("deploy-dev"){
                      steps{
                      sshagent([java-myweb]){
                                            sh """
                                                 scp -o StrictHostKeyChecking=no target/myweb.war ec2-user@172.31.32.236:/home/ec2-user/tomcat-9.0.58/webapps/
                                                 ssh ec2-user@172.31.32.236:/home/ec2-user/tomcat-9.0.58/bin/shutdown.sh
                                                 ssh ec2-user@172.31.32.236:/home/ec2-user/tomcat-9.0.58/bin/startup.sh
                                               """
                                            }
                      }                      
                  }
   }
  }
